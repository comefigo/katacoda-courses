{
    "files.eol": "\n",
    "files.trimTrailingWhitespace": true,
    "editor.trimAutoWhitespace": true,
    "editor.autoIndent": "full",
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    "editor.tabSize": 4,
    "[yaml]": {
        "editor.tabSize": 2
    },
    "[markdown]": {
        "editor.tabSize": 2
    },
    "editor.renderWhitespace": "all",
    "files.encoding": "utf8"
}